@{
    ViewData["Title"] = "Home Page";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card" style="width: 25rem;">
        <div class="card-body text-center">
            <h5 class="card-title">Welcome to the Product Management System</h5>
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <p class="card-text">
                    Hello, @User.Identity.Name! You are logged in as
                    @if (User.IsInRole("admin"))
                    {
                        <strong>Admin</strong>
                    }
                    else if (User.IsInRole("staff"))
                    {
                        <strong>Staff</strong>
                    }
                    else
                    {
                        <strong>User</strong>
                    }
                </p>
            }
            else
            {
                <p class="card-text">Please login or register to continue.</p>
                <a id="login" asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Login</a>
                <a id="register" asp-area="Identity" asp-page="/Account/Register" class="btn btn-secondary">Register</a>
            }
        </div>
    </div>
</div>
