@model Product_Management_System.Dto.ProductDto
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0">Edit Product</h2>
        </div>
        <div class="card-body">
            <form asp-controller="Product" asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <input type="hidden" name="productId" value="@ViewData["ProductId"]" />

                <div class="mb-3">
                    <label class="form-label">Product ID</label>
                    <input class="form-control-plaintext" readonly value="@ViewData["ProductId"]" />
                </div>

                <div class="mb-3">
                    <label asp-for="ProductName" class="form-label">Product Name</label>
                    <input asp-for="ProductName" class="form-control" placeholder="Enter product name" required />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductDescription" class="form-label">Product Description</label>
                    <textarea asp-for="ProductDescription" class="form-control" placeholder="Enter product description" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price ($)</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price" required />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <!-- Display Current Image -->
                    <div class="offset-sm-4 col-sm-8">
                        <img src="/images/@ViewData["ImageFileName"]" width="150" />
                    </div>

                </div>

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label">Upload Image</label>
                    <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" required />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveCheck" />
                    <label asp-for="IsActive" class="form-check-label" for="isActiveCheck">Active</label>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary bt">Submit Product</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /*
            Just to avoid confusion later
        */
    .container {
        max-width: 600px;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        background-color: #376975;
    }

    .btn-primary {
        background-color: #376975;
        border: none;
    }

    .bg-primary {
        background-color: #376975 !important;
    }

    .btn-primary:hover {
        background-color: #2c5550;
    }
</style>
